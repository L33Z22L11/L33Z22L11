{
  // 基础样式
  "editor.fontFamily": "Sarasa Mono SC, JetBrainsMono Nerd Font, Sarasa Gothic SC, PingFang SC, HarmonyOS Sans SC, Consolas",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "editor.mouseWheelZoom": true,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrap": "on",
  "workbench.editor.wrapTabs": true,
  "terminal.integrated.fontSize": 15,
  // 动画
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  // 项目规则
  "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Chromium, IndentWidth: 4}",
  "csscomb.preset": "csscomb",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.formatOnType": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "settingsSync.ignoredExtensions": [
    "ms-vscode.cpptools",
    "llvm-vs-code-extensions.vscode-clangd"
  ],
  // 其他
  "editor.accessibilitySupport": "off",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "go.toolsManagement.autoUpdate": true,
  "redhat.telemetry.enabled": true,
}